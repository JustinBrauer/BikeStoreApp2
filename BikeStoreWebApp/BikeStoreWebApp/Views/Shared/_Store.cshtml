<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bikes R Us</title>
    @Styles.Render("~/Content/css")

    <!--[if lte IE 8]>
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css">
    <!--<![endif]-->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/base-min.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
    <link rel="stylesheet" href="http://purecss.io/combo/1.17.27?/css/layouts/marketing.css">
</head>
<body>
    <div class="header">
        <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal">
            <div class="pure-menu-heading">
                @Html.ActionLink("Bikes R Us", "Index", "Home")
            </div>
            <ul>
                <li>@Html.ActionLink("Bicycles", "Store", "Bicycle")</li>
                <li>@Html.ActionLink("Touring", "Listing", "Bicycle", new { id = 3 })</li>
                <li>@Html.ActionLink("Mountain", "Listing", "Bicycle", new { id = 1 })</li>
                <li>@Html.ActionLink("Road", "Listing", "Bicycle", new { id = 2 })</li>
                <li>@Html.ActionLink("Cart", "Cart", "Bicycle")</li>
                <li class="pure-menu-selected">
                    @Html.ActionLink("Login", "Login", "Account")
                </li>            
            </ul>
        </div>
    </div>

    
    @RenderBody()
  
    
    <div class="footer l-box is-center">
        <p>&copy; @DateTime.Now.Year IST 440W - Team 1</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>